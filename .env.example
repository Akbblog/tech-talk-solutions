# Copy this file to .env.local (for development) or add variables in Vercel dashboard for production.
# DO NOT commit real secrets to this repo. Use Vercel environment variables for production.

# App
NEXT_PUBLIC_APP_NAME=TechTalk
NEXT_PUBLIC_BASE_URL=https://your-site-url.com

# API / Backend
# If using a separate API server
NEXT_PUBLIC_API_URL=https://api.example.com
# or for local dev
# NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Database (example)
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# Auth / Cookies
NEXTAUTH_URL=http://localhost:3000
# A long, random string for production. Set in Vercel dashboard.
NEXTAUTH_SECRET=your_nextauth_secret_here

# Stripe / Payments
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key
STRIPE_SECRET_KEY=sk_test_your_key

# Any third-party keys
# NEXT_PUBLIC_MAPS_KEY=your_maps_key

# Feature flags
# NEXT_PUBLIC_ENABLE_FEATURE_X=false
